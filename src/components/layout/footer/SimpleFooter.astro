---
import { Text } from '@src/components/ui/text/index.astro';
// Customizable links and information via props
// i18n from parent component
const { pageContent } = Astro.props;
const { common } = pageContent;
---

{/* Main content of the footer */}
<div
  class="flex flex-col md:flex-row items-center justify-between text-sm mt-8 md:mt-1 mb-12 md:mb-0 space-y-6 md:space-y-0"
>
  {/* Left: Copyright */}
  <Text class="text-muted-foreground flex-1 mt4">{common.footer.rights}</Text>

  {/* Center: Company name (fully centered) */}
  <Text size="lg" class="flex-1 text-center mt-4">{common.brand}</Text>

  {/* Right: SNS icons */}
  <div class="text-foreground flex space-x-4 flex-1 justify-end mt-4">
    {/* GitHub */}
    <a
      href="https://github.com/yourcompany"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="GitHub"
      class="hover:text-gray-600 dark:hover:text-gray-300 transition"
    >
      <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"
