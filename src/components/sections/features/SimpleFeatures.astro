---
// import Icon type="small" from './elements/Icon type="small".astro';
import { Text } from '@src/components/ui/text/index.astro';
import Icon from '@components/icon/index.astro';

type FeaturesData = {
  headline: string;
  sub_headline: string;
  features: FeatureItem[];
};

type FeatureItem = {
  lead_in_text: string;
  description: string;
  color: string;
  icon: string;
};

const { pageContent } = Astro.props as { pageContent: FeaturesData };
---

<section class="py-16 lg:py-24">
  <div class="max-w-6xl mx-auto px-6">
    {/* Headline & Subheadline */}
    <div class="text-center mb-12">
      <Text size="headline">
        {pageContent.headline}
      </Text>
      <Text variant="muted" size="sub_headline">
        {pageContent.sub_headline}
      </Text>
    </div>

    {/* Responsive grid with 3 columns Ã— 2 rows */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 grid-rows-2 gap-6">
      {
        pageContent.features.map((feature) => (
          <div class="flex space-x-4 items-start max-w-lg mx-auto">
            {/* Icon */}
            <div class={`flex items-top justify-center w-10 h-10 pt-1 ${feature.color}`}>
              <Icon type="small" name={feature.icon} />
            </div>

            {/* Text */}
            <div>
              <Text size="lead_in_text">{feature.lead_in_text}</Text>
              <Text variant="muted" size="description">
                {feature.description}
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
