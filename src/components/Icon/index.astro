---
import SmallIcon from './SmallIcon.astro';

const components = {
  small: SmallIcon,
  // add more components here
};

// Props
const {
  type = 'small',
  name,
  pageContent,
} = Astro.props as {
  type?: keyof typeof components;
  name?: string;
  pageContent?: Record<string, any>;
};

// make component based on input type
const Component = components[type] || SmallIcon;
---

<Component pageContent={pageContent} name={name} />
